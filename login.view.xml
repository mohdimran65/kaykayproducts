<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="hello.login" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Login" >
		<content>
		<Panel height="auto">
		<Image
					src="images/Kayclinic.png"
					densityAware="false"
					width="{/imageWidth}" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Image>
		</Panel>
		<VBox>
		<Panel>
		<Input
				id="userId"
				placeholder="Email or Phone"
				width="50%"/>
	     </Panel><Panel BackgroundDesign="Transparent">
	    <Input
				id="password"
				type="Password"
				placeholder="Password"
				width="50%"/></Panel>
				
		<Panel><Button text="Login" press="login" width="50%" /></Panel>	
		<Panel>
	
		<Link
				text="Forgot Password"
				press="forgot_password"/>
				
				</Panel>
		<Panel><Link
				text="Terms of use"
				press="terms" /></Panel>
		</VBox>		
		</content>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Signup" type="signup" press="register" />
				<Button text="Help" type="help" />
			</Toolbar>
		</footer>
	</Page>
	
</core:View>