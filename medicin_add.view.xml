<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="hello.medicin_add" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Add new Medicine" showNavButton="true" navButtonPress="onNavigation">
		<content>
	<Toolbar height="3rem" width="100%">
			    <Title text="Enter Medicine Details in order to add new"/>
			 </Toolbar>
	<Panel width="auto">
			<InputListItem label="Medicine Name">
			<Input id="medicine"
				placeholder="Medicine"/>
		     </InputListItem>
		     
		     <InputListItem label="Power in MG">
			<Input id="power" 
				placeholder="Power"/>
		     </InputListItem>
		     
		     <InputListItem label="Brand Name" width="70%">
			<Input id="brand"
				placeholder="Brand"/>
		     </InputListItem>
			       </Panel>
			    <Panel>
			    <TextArea width = "90%" id="speciality"
			    placeholder="Enter details about medicine"/>
			    </Panel>   
			    <Button text="Add Medicine" width="100%" id="button1" activeIcon="sap-icon://add" icon="sap-icon://add" press="onAdd"/>
	
		</content>
	</Page>
</core:View>