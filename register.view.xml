<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="hello.register" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:u="sap.ui.unified">
	<Page title="Register" showNavButton="true" navButtonPress="onNavigation">
		<content>
					
	<Toolbar height="3rem" width="100%" id="toolbar1">
			    <Title text="Enter Your Details"/>
			 </Toolbar>
			    <Panel width="auto">
				     <Input width="60%" id="input0" placeholder="Full Name"/>
			         <Input width="60%" id="input1" placeholder="Choose a user ID"/>
			         <Input width="60%" id="input2" type="Password" placeholder="Enter Password"/>
			         
			     </Panel>
			  <Toolbar height="3rem" width="100%" id="toolbar2">
			    <Title text="Enter Contact Details"/>
			  </Toolbar>
			     <Panel width="auto">
			         <Input width="60%" id="input3" placeholder="Email"/>
			         <Input width="60%" id="input4" placeholder="Phone"/> 
			     </Panel>
			     
			    <Toolbar height="3rem" width="100%" id="toolbar3">
			    <Title text="Enter Your Address"/>
			    </Toolbar>
			       <Panel width="auto">
			<InputListItem label="Address">
			<Input id="input5"
				placeholder="Street"
				value="Main Rd, Manchester" />
		     </InputListItem>
		     
		     <InputListItem label="City">
			<Input id="input6" 
				placeholder="City"
				value="New York City" />
		     </InputListItem>
		     
		     <InputListItem label="State">
			<Input id="input7"
				placeholder="State"
				value="New York" />
		     </InputListItem>
			       </Panel>
			       
			  <InputListItem label="You are a" width="60%">
			    <Select id="input8">
				<core:Item key="Dr" text="Doctor" />
				<core:Item key="Ph" text="Pharmacist" />
				<core:Item key="Pa" text="Assistant" />
			</Select>
		   </InputListItem>
			       
			    <Button text="Add new Patient" width="100%" id="button1" activeIcon="sap-icon://add" icon="sap-icon://add" press="register"/>
		
		</content>
		
	</Page>
</core:View>